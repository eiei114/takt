{
  "name": "takt-roblox-ts",
  "version": "0.2.0",
  "private": true,
  "description": "Roblox TS project focused on Flamework + Rojo workflow",
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "clean": "powershell -NoProfile -Command \"Remove-Item -Recurse -Force out,dist,build -ErrorAction SilentlyContinue\"",
    "build": "rbxtsc",
    "watch": "rbxtsc --watch",
    "serve": "rojo serve default.project.json",
    "build:place": "powershell -NoProfile -Command \"New-Item -ItemType Directory -Force build | Out-Null; rojo build default.project.json -o build/main.rbxlx\"",
    "lint": "eslint \"places/**/*.ts\"",
    "test": "echo \"No test runner configured yet. Add TestEZ or @rbxts/jest.\"",
    "takt": "takt",
    "takt:run": "takt run",
    "takt:list": "takt list"
  },
  "dependencies": {
    "@flamework/components": "^1.3.2",
    "@flamework/core": "^1.3.2",
    "@flamework/networking": "^1.3.2",
    "@rbxts/services": "^1.5.5",
    "@rbxts/t": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rbxts/compiler-types": "3.0.0-types.0",
    "@rbxts/types": "latest",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.39.2",
    "rbxts-transformer-flamework": "^1.3.2",
    "roblox-ts": "^3.0.0",
    "takt": "^0.21.0",
    "typescript": "~5.4.5",
    "typescript-eslint": "^8.46.1"
  }
}
